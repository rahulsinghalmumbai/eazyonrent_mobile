<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eazyonrent.Pages.AddItemPage"
             Title="Add Item"
             BackgroundColor="White">

    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="20">

            <!-- Header with Camera Icon -->
            <Frame BackgroundColor="#F5F5F5" 
                   HeightRequest="140" 
                   CornerRadius="10"
                   HasShadow="True"
                   BorderColor="Gray">
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Frame BackgroundColor="White" 
                           CornerRadius="8" 
                           Padding="20"
                           HasShadow="False"
                           BorderColor="LightGray">
                        <Button x:Name="CameraButton"
                               Text="ðŸ“·" 
                               FontSize="30"
                               BackgroundColor="Transparent"
                               TextColor="Gray"
                               BorderWidth="0"
                               Clicked="OnCameraClicked"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Frame>
                </StackLayout>
            </Frame>

            <!-- Code Field -->
            <!-- Category Selection -->
            <Frame BackgroundColor="White" CornerRadius="15" HasShadow="True" Padding="5">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Category" FontSize="16" FontAttributes="Bold" TextColor="#333"/>
                    <Picker x:Name="CategoryPicker" 
                            ItemsSource="{Binding Categories}"
                            ItemDisplayBinding="{Binding CategoriesName}"
                            SelectedItem="{Binding SelectedCategory}"
                            BackgroundColor="#F8F9FA"
                            TextColor="#333"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Name Field -->
            <StackLayout Spacing="8">
                <Label Text="Name" 
                       FontSize="16" 
                       FontAttributes="Bold"
                       TextColor="Black"/>
                <Frame BorderColor="Gray" 
                       BackgroundColor="White" 
                       CornerRadius="8" 
                       Padding="0"
                       HasShadow="False">
                    <Entry x:Name="NameEntry" 
                           Placeholder="Enter item name"
                           BackgroundColor="Transparent"
                           FontSize="14"
                           HeightRequest="45"/>
                </Frame>
            </StackLayout>

            <!-- Price Field -->
            <StackLayout Spacing="8">
                <Label Text="Price" 
                       FontSize="16" 
                       FontAttributes="Bold"
                       TextColor="Black"/>
                <Frame BorderColor="Gray" 
                       BackgroundColor="White" 
                       CornerRadius="8" 
                       Padding="0"
                       HasShadow="False">
                    <Entry x:Name="PriceEntry" 
                           Placeholder="Enter price"
                           Keyboard="Numeric"
                           BackgroundColor="Transparent"
                           FontSize="14"
                           HeightRequest="45"/>
                </Frame>
            </StackLayout>

            <!-- Description Field -->
            <StackLayout Spacing="8">
                <Label Text="Description" 
                       FontSize="16" 
                       FontAttributes="Bold"
                       TextColor="Black"/>
                <Frame BorderColor="Gray" 
                       BackgroundColor="White" 
                       CornerRadius="8" 
                       Padding="0"
                       HasShadow="False">
                    <Entry x:Name="HomeCostEntry" 
                           Placeholder="Enter Item Description"
                           BackgroundColor="Transparent"
                           FontSize="14"
                           HeightRequest="45"/>
                </Frame>
            </StackLayout>

            <!-- Available From Field -->
            <StackLayout Spacing="8">
                <Label Text="Available From" 
                       FontSize="16" 
                       FontAttributes="Bold"
                       TextColor="Black"/>
                <Frame BorderColor="Gray" 
                       BackgroundColor="White" 
                       CornerRadius="8" 
                       Padding="8"
                       HasShadow="False">
                    <Grid ColumnDefinitions="*,Auto">
                        <DatePicker x:Name="AvailableFromPicker" 
                                  Grid.Column="0"
                                  FontSize="14"
                                  TextColor="Black"
                                  BackgroundColor="Transparent"/>
                        <!--<Button x:Name="SendButton"
                                Grid.Column="1"
                                Text="Send" 
                                BackgroundColor="#4A90E2" 
                                TextColor="White"
                                CornerRadius="6"
                                WidthRequest="80"
                                HeightRequest="35"
                                FontSize="12"
                                Clicked="OnSendClicked"/>-->
                    </Grid>
                </Frame>
            </StackLayout>

            <!-- Status Field -->
            <StackLayout Spacing="8">
                <Label Text="Status" 
                       FontSize="16" 
                       FontAttributes="Bold"
                       TextColor="Black"/>
                <Frame BorderColor="Gray" 
                       BackgroundColor="White" 
                       CornerRadius="8" 
                       Padding="0"
                       HasShadow="False">
                    <Picker x:Name="StatusPicker" 
                            Title="Select Status"
                            FontSize="14"
                            TextColor="Black"
                            BackgroundColor="Transparent">
                        <Picker.Items>
                            <x:String>Active</x:String>
                            <x:String>Inactive</x:String>
                            <x:String>Pending</x:String>
                        </Picker.Items>
                    </Picker>
                </Frame>
            </StackLayout>

            <!-- Save Button -->
            <Button x:Name="SaveButton"
                    Text="Save Item"
                    BackgroundColor="#28A745"
                    TextColor="White"
                    CornerRadius="10"
                    FontSize="16"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    Margin="0,20,0,0"
                    Clicked="OnSaveClicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>